.header
	.home-menu.pure-menu.pure-menu-horizontal

.content-wrapper
	.content
		%h1.content-head.is-center Themextractor
		%h2.content-subhead.is-center The best way to not read a text and know what it's about

		.content-form
			%form#content-form-obj.pure-form
				%fieldset.pure-group
					%label{for:"content-form-text"} Put your text here:
					%textarea#content-form-text.pure-input-1-1{name:"content-form-text", rows:5, style:"width:100%", form:"content-form-obj", placeholder:"Lorem ipsum dolor...", required:true}
					%label{for:"content-form-resultsnb"} Number of results&nbsp;
					%select#content-form-resultsnb
						%option{value:"1"} 1
						%option{value:"2"} 2
						%option{value:"3"} 3
						%option{value:"4"} 4
						%option{value:"5"} 5
						%option{value:"6"} 6
						%option{value:"7"} 7
					%button.pure-button.pure-button-primary{type:"submit"} Go!

		.content-results.pure-g
			.pure-u-1.pure-u-md-1-2
				%table.pure-table.pure-table-horizontal{style:"width:100%"}
					%thead
						%tr
							%th #
							%th Topics
							%th Hits
					%tbody
						%tr
							%td 1
							%td Politics
							%td 30%
						%tr
							%td 2
							%td Geography
							%td 27.3%
						%tr
							%td 3
							%td Law
							%td 15.8%
			.pure-u-1.pure-u-md-1-2{style:"background-color:gray;color:white;"} Chart

.footer.l-box.is-center
	%a{href:"http://www.github.com/kbogtob"} <i class="fa fa-github"></i>
	%a{href:"https://twitter.com/kbogtob"} <i class="fa fa-twitter-square">